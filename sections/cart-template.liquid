<div class="container">

  {% if cart.item_count > 0 %}
    <h1 class="my-4">{{ 'cart.general.title' | t }}</h1>

    <form action="/cart" method="post" class="cart-form" novalidate>
      <div class="row">
        <div class="col-md-8">
            <table class="table table-borderless responsive-table">
                <thead class="small--hide">
                  <tr class="border-bottom">
                    <th>{{ 'cart.label.product' | t }}</th>
                    <th>{{ 'cart.label.price' | t }}</th>
                    <th>{{ 'cart.label.quantity' | t }}</th>
                    <th>{{ 'cart.label.total' | t }}</th>
                  </tr>
                </thead>
                <tbody>

                  <!-- if cart has loaded and has items -->
                  <template v-if="cart">
    
                        <template v-for="(item, index) in cart.items">
                        
        
                        {% comment %}
            
                        Cart Item Template
                        =====================
                        The data-label attributes on <td> elements are mobile-friendly
                        helpers used for responsive-table labels
                        {% endcomment %}
            
                          <tr class="responsive-table-row py-2">
            
                            <td data-label="{{ 'customer.order.product' | t }}">
    
                                <div class="d-flex">
                                    <div class="img">
                                      <template v-if="item.image">
                                          <a :href="item.url">
                                            <img class="img-fluid mr-4" width="150" :src="item.image" alt="">
                                          </a>
                                      </template>
                                      
                                    </div>
    
                                    <div class="title">
                                            <a :href="item.url">${ item.product_title }</a>
    
                                            <template v-if="!item.product_has_only_default_variant">
                                              <p>${ item.variant_title }</p>
                                            </template>
                                          
                                        
                                            <template v-if="item.properties">
                                                <template v-for="p in item.properties">
                                                      <template  v-if="p.first">
                                                            ${ p.first}
    
                                                            <template v-if="p.last.includes('/uploads/')">
                                                                <a :href="p.last"> ${p.last.split('/').pop()} </a>
                                                            </template>
          
                                                            <template v-else>
                                                                ${p.last}
                                                            </template>
    
                                                      </template>
    
                                                </template>
    
                                            </template> <!-- endif item.properties -->
    
                                            
                                    </div>  <!-- title -->
                                </div>
    
                            </td>
                            
                            <td data-label="{{ 'cart.label.price' | t }}">
                              <template v-if="item.original_line_price != item.line_price">
    
                                <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
                                  ${ item.price | money }
                                <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
                                <s>${ item.original_price | money }</s>
    
                              </template>
    
                              <template v-else>
                                    ${item.price | money }
                              </template>
    
                            </td>
                            <td data-label="{{ 'cart.label.quantity' | t }}">
                              <input type="number"
                                    class="form-control"
                                    name="updates[]"
                                    :id="'updates_'+item.key"
                                    v-model="item.quantity"
                                    min="0"
                                    aria-label="{{ 'cart.general.item_quantity' | t }}">
                            </td>
                            <td data-label="{{ 'cart.label.total' | t }}">
                              ${ total_price(item) | money }
                            </td>
                          </tr>
            
                        </template>

                  </template>


                </tbody>
      
            </table>
        </div>

        <div class="col-md-4">
          <div class="cart-sidebar">
              {% if settings.cart_notes_enable %}
                  <label class="form-label" for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
                  <textarea class="form-control" name="note" id="CartSpecialInstructions">{{ cart.note }}</textarea>
              {% endif %}
        
                <p>{{ 'cart.general.subtotal' | t }}</p>
                <p v-if='cart'>${ cart_total_price | money }</p>
                {% if cart.total_discounts > 0 %}
                  <p>{{ 'cart.general.savings' | t }} {{ cart.total_discounts | money }}</p>
                {% endif %}
                <p>{{ 'cart.general.shipping_at_checkout' | t }}</p>
                <input type="button" @click="updateCart" name="update" class="btn btn-success" value="{{ 'cart.general.update' | t }}">
                <input type="submit" name="checkout" class="btn btn-primary" class="button" value="{{ 'cart.general.checkout' | t }}">

          </div>
        </div>
      </div>

    </form>
  {% else %}

  <h1>{{ 'cart.general.title' | t }}</h1>

  {% comment %}
  Cart empty state
  {% endcomment %}
  <div class="supports-cookies">
    <p>{{ 'cart.general.empty' | t }}</p>
    <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
  </div>

  {% comment %}
  Cart no cookies state
  ---------------------
  Browser cookies are required to use the cart. If cookies aren't enabled in the
  browser a message is displayed prompting the user to enable them.
  {% endcomment %}
  <div class="supports-no-cookies">
    <p>{{ 'cart.general.cookies_required' | t }}</p>
  </div>


{% endif %}

</div>Â 